<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="114dp"
        android:layout_height="71dp"
        android:text="Subway 6 inch Steak and Cheese with American cheese (320 Cal)"
        style="@style/sand_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="114dp"
        android:layout_height="71dp"
        android:layout_marginStart="22dp"
        android:text="Tomato spaghetti (444 Cal)"
        style="@style/spa_view"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="114dp"
        android:layout_height="71dp"
        android:layout_marginEnd="22dp"
        android:text="Corn Flakes cereal (150 Cal)"
        style="@style/corn_view"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />

    <EditText
        android:id="@+id/corn_input"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="22dp"
        style="@style/corn_in"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/sand_input"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/sand_input"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        style="@style/sand_in"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/spa_input"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="32dp"
        style="@style/spa_in"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/sand_input"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/total_cal"
        style="@style/total_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sand_input"
        app:layout_constraintVertical_bias="0.144" />

</androidx.constraintlayout.widget.ConstraintLayout>